<%- include('./partials/header') %>

<% if(success.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block mt-1 mb-1 text-white">
      <%= success %>
    </span>
  </div>
<% } %>

<div class="w-full h-screen flex items-start px-20 py-20">
  <!-- ░░ Left Sidebar ░░ -->
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex items-center gap-2">
      <h3>Sort by</h3>
      <form action="/shop">
        <select class="border-[1px] px-2 py-1" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="flex flex-col mt-20">
      <a class="block w-fit mb-2" href="#">New Collection</a>
      <a class="block w-fit mb-2" href="#">All Products</a>
      <a class="block w-fit mb-2" href="#">Discounted Products</a>
    </div>

    <div class="mt-32">
      <a class="block w-fit mb-2" href="#">Filter by:</a>
      <a class="block w-fit mb-2" href="#">Availability</a>
      <a class="block w-fit mb-2" href="#">Discount</a>
    </div>
  </div>

  <!-- ░░ Product Grid ░░ -->
  <div class="w-[75%] flex flex-col gap-5 h-screen overflow-y-auto">
    <div class="flex items-start gap-5 flex-wrap">
      <% products.forEach(product => { %>
        <div class="w-60">
          <!-- ░░ Image Container ░░ -->
          <div class="w-full flex items-center justify-center h-52 bg-[<%= product.bgcolor %>]">
            <% if (product.image) { %>
              <img
                class="h-[12rem]"
                src="data:image/png;base64,<%= product.image.toString('base64') %>"
                alt="<%= product.name %>"
              />
            <% } else { %>
              <div class="flex items-center justify-center w-full h-full bg-gray-200 text-gray-500 text-sm">
                No&nbsp;image
              </div>
            <% } %>
          </div>

          <!-- ░░ Product Details ░░ -->
          <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
               
            <div>
              <h3><%= product.name %></h3>
              <h4>₹<%= product.price %></h4>
            </div>
            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-black"
               href="/addtocart/<%= product._id %>">
              <i class="ri-add-line"></i>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
